{
  "name": "ngx-auth",
  "version": "0.0.0",
  "description": "JWT authentication utility for Angular & Angular Universal",
  "repository": {
    "type": "git",
    "url": "https://github.com/fulls1z3/ngx-auth.git"
  },
  "keywords": [],
  "author": {
    "name": "Burak Tasci",
    "email": "mail@buraktasci.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulls1z3/ngx-auth/issues"
  },
  "homepage": "https://github.com/fulls1z3/ngx-auth#readme",
  "scripts": {
    "clean": "rimraf dist",
    "build:core": "ng-packagr -p packages/@ngx-auth/core/package.json",
    "build:auth0": "ng-packagr -p packages/@ngx-auth/auth0/package.json -c tools/build/tsconfig.package.json",
    "build": "npm run build:core && npm run build:auth0",
    "lint": "tslint -p ./tsconfig.lint.json --force",
    "lint:check": "tslint-config-prettier-check ./tslint.lint.json",
    "rebuild": "npm run clean && npm run build",
    "ci:before": "greenkeeper-lockfile-update",
    "ci:after": "greenkeeper-lockfile-upload",
    "test": "jest --runInBand --colors",
    "test:ci": "jest --ci --updateSnapshot --colors",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@angular/common": "^10.1.0",
    "@angular/compiler": "^10.1.0",
    "@angular/compiler-cli": "^10.1.0",
    "@angular/core": "^10.1.0",
    "@angular/platform-browser": "^10.1.0",
    "@angular/platform-browser-dynamic": "^10.1.0",
    "@angular/router": "^10.1.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/auth0-js": "^9.14.5",
    "@types/jest": "26.0.8",
    "@types/node": "~8.9.4",
    "angular-tslint-rules": "^1.20.4",
    "auth0-js": "^9.16.2",
    "codelyzer": "^5.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.1",
    "jest": "26.2.2",
    "jest-junit-reporter": "^1.1.0",
    "jest-preset-angular": "8.3.1",
    "lerna": "^3.20.2",
    "lint-staged": "~11.0.0",
    "ng-packagr": "^10.1.2",
    "prettier": "2.3.2",
    "prettier-tslint": "^0.4.2",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "rxjs": "~6.5.5",
    "tsickle": "^0.43.0",
    "tslint": "5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.0.8",
    "zone.js": "^0.10.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
