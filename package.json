{
  "name": "ngx-auth",
  "version": "4.0.0",
  "description": "JWT authentication utility for Angular",
  "repository": {
    "type": "git",
    "url": "https://github.com/fulls1z3/ngx-auth.git"
  },
  "keywords": [],
  "author": {
    "name": "Burak Tasci",
    "email": "me@fulls1z3.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fulls1z3/ngx-auth/issues"
  },
  "homepage": "https://github.com/fulls1z3/ngx-auth#readme",
  "scripts": {
    "clean": "rimraf .temp dist",
    "build": "ts-node ./tools/build/rollup.ts && rimraf .temp",
    "lint": "tslint -p ./tslint.json --force",
    "rebuild": "npm run clean && npm run build",
    "ci:before": "greenkeeper-lockfile-update",
    "ci:after": "greenkeeper-lockfile-upload",
    "test": "jest --runInBand --colors",
    "test:ci": "jest --ci --updateSnapshot --colors",
    "release": "npm run standard-version"
  },
  "devDependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/compiler-cli": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2",
    "@types/node": "^8.0.25",
    "@types/jest": "^20.0.8",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "glob": "^7.1.2",
    "camelcase": "^4.1.0",
    "rollup": "~0.42.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^2.0.1",
    "jest": "^20.0.4",
    "jest-preset-angular": "^2.0.5",
    "jest-junit-reporter": "^1.1.0",
    "standard-version": "^4.2.0",
    "codelyzer": "^3.1.2",
    "tslint": "~5.7.0",
    "angular-tslint-rules": "^1.0.4",
    "typescript": "~2.1.6"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "./tools/test/jest.setup.ts",
    "testResultsProcessor": "./node_modules/jest-junit-reporter",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "cache": false,
    "noStackTrace": true,
    "silent": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/@ngx-auth/core/src/**.ts"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "@types/lodash",
      "rollup"
    ]
  }
}
