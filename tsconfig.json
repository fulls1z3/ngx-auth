{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@ngx-auth/core": ["packages/@ngx-auth/core/src/index.ts"],
      "@ngx-auth/auth0": ["packages/@ngx-auth/auth0/src/index.ts"]
    }
  },
  "include": ["tools/**/*.ts", "packages/**/*.ts"]
}
